{
  "name": "almuerzos-peru-back",
  "version": "1.0.0",
  "description": "API REST para plataforma de almuerzos en Perú con Clean Architecture",
  "author": "Equipo Almuerzos Perú",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "fly:deploy": "nest build && fly deploy",
    "fly:logs": "fly logs",
    "test": "jest",
    "test:watch": "jest --watchAll --verbose",
    "test:coverage": "jest --config jest.config.js --coverage --verbose",
    "test:ci": "jest --config jest.config.js --runInBand --coverage --watchAll=false --silent --passWithNoTests",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typecheck": "tsc --noEmit",
    "db:check": "ts-node tools/scripts/check-db.ts",
    "db:test": "ts-node tools/scripts/test-typeorm.ts",
    "docker:dev": "docker-compose -f docker/compose/docker-compose.dev.yml up -d",
    "docker:dev:build": "docker-compose -f docker/compose/docker-compose.dev.yml up --build -d",
    "docker:dev:logs": "docker-compose -f docker/compose/docker-compose.dev.yml logs -f",
    "docker:dev:down": "docker-compose -f docker/compose/docker-compose.dev.yml down",
    "docker:prod": "docker-compose -f docker/compose/docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker/compose/docker-compose.prod.yml up --build -d",
    "docker:prod:down": "docker-compose -f docker/compose/docker-compose.prod.yml down",
    "docker:clean": "docker-compose -f docker/compose/docker-compose.dev.yml down -v && docker system prune -f",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "version": "npm run format && npm run lint && git add -A"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,html,scss}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^11.1.5",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.5",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "firebase-admin": "^12.7.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.25",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^11.1.5",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "path-is-absolute": "^2.0.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
