# ============================================
# Configuración de la Aplicación - v1.0.0
# ============================================

# Entorno de la aplicación
NODE_ENV=development
PORT=3000

# URL del frontend (para CORS)
FRONTEND_URL=http://localhost:3001

# ============================================
# Configuración de Base de Datos PostgreSQL
# ============================================

# Conexión a base de datos
DB_HOST=your_database_host
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# SSL (true para producción/AWS RDS, false para desarrollo local)
DB_SSL=true

# ============================================
# Configuración de Seguridad
# ============================================

# JWT Secret (generar uno seguro para producción)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRATION=1d

# ============================================
# Configuración de Logs
# ============================================

# Nivel de logs (error, warn, log, debug, verbose)
LOG_LEVEL=log

# ============================================
# Configuración de Cache Redis (Opcional)
# ============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Configuración de Email (Futuro)
# ============================================

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@almuerzos-peru.com

# ============================================
# Configuración de Archivos (Futuro)
# ============================================

# AWS S3 para almacenamiento de imágenes
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=almuerzos-peru-images
